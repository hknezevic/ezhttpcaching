{% if blog_posts is defined and blog_posts is not empty  %}
<div class="container latest_blog_posts">
    <h2>Latest blog posts</h2>

    <div class="row">
    {% for blog_post in blog_posts %}
        {% if loop.index0 % 3 == 0 %}
        </div><div class="row">
        {% endif %}

        <div class="col-xs-12 col-sm-4">
            <div class="col-xs-12 center-block">
                {{ ez_render_field(blog_post.content, 'image', {
                    parameters: {
                        alias: 'blog_post_line_home',
                        class: 'img-responsive img-rounded'
                    }
                }) }}
            </div>
            <div class="col-xs-12">
                <h3 class="header-text-one"><a href="{% if blog_post.location.isDraft %}#{% else %}{{ path(blog_post.location) }}{% endif %}">{{ ez_content_name(blog_post.content) }}</a></h3>
                <div class="small">{{ ez_render_field(blog_post.content, 'intro') }}</div>
            </div>
        </div>
    {% endfor %}
    </div>
</div>
{% endif %}